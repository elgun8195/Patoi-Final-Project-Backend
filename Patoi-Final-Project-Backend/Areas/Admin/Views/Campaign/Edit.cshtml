@model Campaign
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h3>Edit Campaign Section</h3>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <form method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="@Model.DiscountPercent" class="form-label">Discount Percent</label>
            <input asp-for="@Model.DiscountPercent" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.DiscountPercent"></span>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="campaign" asp-action="index">

            <i style="font-size:0.875rem; text-decoration:none;" class="btn btn-dark">Back</i>
        </a>
    </form>
</div>



