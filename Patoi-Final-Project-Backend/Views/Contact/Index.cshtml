@model Contact
<main>
    <section id="page-title">
        <div class="page-title-area">
            <div class="container">
                <div class="page-title-content">
                    <h1>Shop Grid</h1>
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li><i class="fa-solid fa-angle-right"></i> Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>




    <div class="contact-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="contact-form">
                        <h3>Get In Touch</h3>


                        <form method="post">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group mb-3">
                                        <label for="">Your Name</label>
                                        <input asp-for="Name" required="" class="form-control">
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group mb-3">
                                        <label for="">Email Address</label>
                                        <input asp-for="Email" required="" class="form-control" id="email">
                                        <span class="text-danger" asp-validation-for="Email"></span>

                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group mb-3">
                                        <label for="">Phone Number</label>
                                        <input asp-for="PhoneNumber" required="" class="form-control">
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group mb-3">
                                        <label for="">Subject</label>
                                        <input asp-for="Subject" required="" class="form-control">
                                        <span class="text-danger" asp-validation-for="Subject"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="form-group mb-3">
                                        <label for="">Message...</label>
                                        <textarea asp-for="Message" name="message" id="message" class="form-control" cols="30" rows="4" required="" data-error="Please enter your message"></textarea>
                                        <span class="text-danger" asp-validation-for="Message"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="form-check mb-3">
                                        <input asp-for="Accept" required="" class="form-check-input" id="checkme">
                                        <label for="" class="form-check-label" for="checkme">
                                            Accept <a href="terms-conditions.html">Terms of Services</a> and <a href="privacy-policy.html">Privacy Policy</a>
                                        </label>
                                        <span class="text-danger" asp-validation-for="Accept"></span>

                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <button type="submit" class="default-btn disabled" data-text="send"><span>Send Message</span></button>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="contact-info">
                        <h3>Contact Information</h3>
                        <ul>
                            <li><span>Hotline:</span> <a href="tel:@ViewBag.Bio.Hotline">@ViewBag.Bio.Hotline</a></li>
                            <li><span>Tech support:</span> <a href="tel:+1514312-5678">@ViewBag.Bio.Support</a></li>
                            <li><span>Email:</span> <a href="mailto:hello@patoi.com">@ViewBag.Bio.Email</a></li>
                            <li><span>Address:</span> @ViewBag.Bio.Address</li>
                            <li><span>Available:</span> Monday - Friday 8:00am - 8:00pm</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="maps">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2857.379561180058!2d49.85175681525654!3d40.377190879369756!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e1!3m2!1sen!2s!4v1661713736899!5m2!1sen!2s" width="600" height="auto" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Assets/js/contact.js"></script>
}