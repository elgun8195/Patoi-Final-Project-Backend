@model HomeVM
<main>
    <section id="page-title">
        <div class="page-title-area">
            <div class="container">
                <div class="page-title-content">
                    <h1>About Us</h1>
                    <ul>
                        <li><a asp-controller="home" asp-action="index">Home</a></li>
                        <li><i class="fa-solid fa-angle-right"></i> About Us</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>


    <!-- About Area  -->
    <div class="about-area pt-100 pb-75">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-12">
                    <div class="about-image">
                        <img src="~/images/about/about1.jpg" alt="about-image" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="about-text">
                        <h2>The Story of Our Journey</h2>
                        <span>
                            Cras ultricies ligula sed magna dictum porta. Curabitur non
                            nulla sit amet nisl tempus convallis quis ac lectus. Cras
                            ultricies ligula sed magna dictum porta.
                        </span>
                        <p>
                            We offer quality products at low prices every day. We have
                            been in this business for most 20 years. We have been doing
                            online shopping very confiden tly. Our customers like and
                            trust us so much because of the quality of our site's
                            products. Cras ultricies ligula sed magna dictum porta low
                            prices every day.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12">
                    <div class="about-image">
                        <img src="~/images/about/about2.jpg" alt="about-image" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Area  -->
  
    <!-- feedback-area -->

    <div class="feedback-area pb-100">
        <div class="container">
            <div class="section-title">
                <h2>What Our Client Says</h2>
            </div>
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12">
                    <div class="feedback-slides owl-carousel owl-theme owl-loaded owl-drag">
                        <div class="owl-stage-outer">
                            <div class="owl-stage">
                                @foreach (var item in Model.Users)
                               {
                                   
                               
                                <div class="owl-item" style="width: 636px">
                                    <div class="single-feedback-box">
                                        <p>
                                         @item.Desc
                                        </p>
                                        <div class="client-info">
                                            <img src="~/images/user/@item.ImageUrl"
                                                 alt="user" />
                                            <h3>@item.Name</h3>
                                            <span>@item.Position</span>
                                        </div>
                                    </div>
                                </div>

                        }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 xol-md-12">
                    <div class="video-box">
                        <img src="~/images/video.jpg" alt="video-image" />
                        <a href="https://www.youtube.com" class="popup-video">
                            <i class="fa-solid fa-play"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- feedback-area -->
    <!-- Team -->

    <div class="team-area pb-75">
        <div class="container">
            <div class="section-title">
                <h2>Meet Our Founders</h2>
            </div>
            <div class="row justify-content-center">
                @foreach (var item in Model.Teams)
               {
                   
               
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="single-team-member">
                        <img src="~/images/team/@item.ImageUrl" alt="" />
                        <h3>@item.Name</h3>
                        <span>@item.Position</span>
                    </div>
                </div>}
                  </div>
        </div>
    </div>

    <!-- Team -->
    <!-- Brand Area -->

    <div class="partners-area pb-100">
        <div class="container">
            <div class="section-title">
                <h2>Our Partners</h2>
            </div>
            <div class="partners-inner">
                <div class="row justify-content-center align-items-center">
                    @foreach (var item in Model.Brands)
                   {
                       
                   
                    <div class="col-lg-2 col-md-3 col-sm-4 col-4">
                        <div class="single-partners-box">
                            <a href="shop-grid.html" class="d-block">
                                <img src="~/images/brands/@item.ImageUrl" alt="brands">
                            </a>
                        </div>
                    </div> 
               }
                </div>
            </div>
        </div>
    </div>

    <!-- Brand Area -->
</main>