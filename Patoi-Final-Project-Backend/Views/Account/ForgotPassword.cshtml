@model AccountVM

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<main>
    <section id="page-title">
        <div class="page-title-1area">
            <div class="container">
                <div class="page-title-content">
                    <h1>Shop Grid</h1>
                    <ul>
                        <li><a asp-controller="home" asp-action="index">Home</a></li>
                        <li><i class="fa-solid fa-angle-right"></i> My Account</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <div class="profile-authentication-area ptb-100">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-lg-8 col-md-8 ">
                    <div class="login-form">
                        <h2>Forgot Password</h2>
                        <form method="post">

                            <div class="form-group">
                                <label asp-for="@Model.AppUser.Email">Email</label>
                                <input asp-for="@Model.AppUser.Email" class="form-control" placeholder="Email">
                                <span class="text text-danger" asp-validation-for="AppUser.Email"></span>

                            </div>

                            <p class="description"> Don't have an account? <a asp-controller="account" asp-action="register" class="text-primary">Register</a></p>
                            <p class="description"> Reset Password? <a asp-controller="account" asp-action="forgotPassword" class="text-primary">ResetPassword</a></p>

                            <button type="submit">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
