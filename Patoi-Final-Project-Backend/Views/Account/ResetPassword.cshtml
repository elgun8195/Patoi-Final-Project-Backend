@model AccountVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

 

<main>
    <section id="page-title">
        <div class="page-title-1area">
            <div class="container">
                <div class="page-title-content">
                    <h1>Shop Grid</h1>
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li><i class="fa-solid fa-angle-right"></i> My Account</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <div class="profile-authentication-area ptb-100">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-lg-8 col-md-8 ">
                    <div class="login-form">
                        <h2>Reset Password</h2>
                        <form method="post">
                        
                            <div class="form-group">
                                <label asp-for="@Model.Password">Password</label>
                                <input asp-for="@Model.Password" class="form-control" placeholder="Email">
                                <span class="text text-danger" asp-validation-for="Password"></span>

                            </div>
                            <div class="form-group d-none">
                                <input asp-for="Token" class="form-control" />
                                <input asp-for="AppUser.Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ConfirmPassword">ConfirmPassword</label>
                                <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                                <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>

                            </div>
                            <button type="submit">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>